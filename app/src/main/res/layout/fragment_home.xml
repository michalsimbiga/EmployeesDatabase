<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.airbnb.epoxy.EpoxyRecyclerView
        android:id="@+id/homeRecycler"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="@dimen/fragment_home_recycler_padding_10dp"
        app:itemSpacing="@dimen/fragment_home_recycler_item_spacing_10dp" />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/addButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|end"
        android:layout_marginEnd="@dimen/fragment_home_add_employee_fab_margin_end_16dp"
        android:layout_marginBottom="@dimen/fragment_home_add_employee_fab_margin_bottom_16dp"
        android:src="@drawable/ic_add" />

</FrameLayout>